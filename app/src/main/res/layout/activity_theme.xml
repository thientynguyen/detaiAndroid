<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.example.pc.readnewsapp.ThemeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#111a07f1"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btMenu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_menu"
                android:onClick="menu"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btTinhot"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_hot"
                android:onClick="newhot"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin hot"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btChuDe"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_cm"
                android:onClick="theme"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chủ đề"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btTinMoi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_new"
                android:onClick="newtin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin mới"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@drawable/logo"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">


            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                android:onClick="clickNews"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/pl"
                        />
                    <TextView
                        android:text="Pháp luật"
                        android:textColor="#871829"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                android:onClick="clickWorld"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/tg"
                        />
                    <TextView
                        android:text="Thế giới"
                        android:textColor="#871829"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">


            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:onClick="clickBusiness">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/kd"
                        />
                    <TextView
                        android:text="Kinh doanh"
                        android:textColor="#871829"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:onClick="clickEntertainment">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/gt"
                        />
                    <TextView
                        android:text="Giải trí"
                        android:textColor="#871829"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">


            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:onClick="clickHealth">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/tim" />
                    <TextView
                        android:text="Sức khỏe"
                        android:textColor="#871829"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:onClick="clickFamily">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/gd"
                        />
                    <TextView
                        android:text="Gia đình"
                        android:textColor="#871829"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>




</ScrollView>
